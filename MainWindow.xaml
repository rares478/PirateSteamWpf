<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1400">
    <Grid>
        <Grid VerticalAlignment="Top">
            <StackPanel Height="79" VerticalAlignment="Center" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}"/>
            <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="59,25,0,0" TextWrapping="Wrap" VerticalAlignment="Top" MouseLeftButtonDown="textBlock_MouseLeftButtonDown"><Run Text="Library"/><LineBreak/><Run/></TextBlock>
            <TextBlock x:Name="textBlock_Copy" HorizontalAlignment="Left" Margin="136,27,0,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="2.333,0.378"><Run Text="Settings"/><LineBreak/><Run/></TextBlock>
        </Grid>
        <Frame x:Name="frameMain" Margin="0,79,0,0" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
