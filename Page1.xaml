<Page x:Class="WpfApp3.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp3"
      mc:Ignorable="d" 
      d:DesignHeight="1363.487" d:DesignWidth="899.666"
      Title="Page1">

    <Grid Margin="0,0,0,0">
        <ListBox x:Name="listBox" Background="#FFD43737" HorizontalAlignment="Left" Width="250" VerticalAlignment="Stretch" SelectionChanged="listBox_SelectionChanged">
            <ListBoxItem Background="#FFE81313" Content="dada"/>
        </ListBox>
        <Grid x:Name="gridLibrary" Margin="250,0,0,0" Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" MouseLeftButtonDown="GridLibrary_MouseLeftButtonDown">
            <Image x:Name="image" Height="300" VerticalAlignment="Top" Stretch="Fill" />
            <Grid Margin="0,300,0,0" VerticalAlignment="Top" Height="116">
                <StackPanel Height="116" VerticalAlignment="Top" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}"/>
                <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="45,48,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
                <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="70,28,0,0" VerticalAlignment="Top"/>
            </Grid>
            <Grid Margin="0,300,0,0" VerticalAlignment="Top" Height="116">
                <StackPanel Height="116" VerticalAlignment="Top" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}"/>
                <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="137,45,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="36" Width="74"/>
                <Button x:Name="button1" Content="Button" HorizontalAlignment="Left" Margin="24,0,0,0" VerticalAlignment="Center" Height="36" Width="71"/>
                <Grid/>
            </Grid>
            <Grid Margin="0,416,0,0" Background="{DynamicResource {x:Static SystemColors.GradientActiveCaptionBrushKey}}">
                <Grid VerticalAlignment="Top">
                    <StackPanel x:Name="notes" Height="116" VerticalAlignment="Center" MouseLeftButtonDown="notes_MouseLeftButtonDown" Background="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"/>
                    <Image x:Name="image1" Height="100" Width="100" Margin="15,8,998,8"  />
                    <TextBlock x:Name="textBlock2" HorizontalAlignment="Left" Margin="162,45,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" RenderTransformOrigin="0.527,0.564"/>
                </Grid>
            </Grid>
            <StackPanel/>
        </Grid>
        <Frame x:Name="frame" Visibility="Collapsed" Background="Transparent" IsHitTestVisible="False" />
    </Grid>
</Page>
